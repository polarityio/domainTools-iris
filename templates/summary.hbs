{{#unless (is-empty result.domain_risk.risk_score)}}
    <span {{on "click" (optional this.scrollToIntegration)}} class="integration-summary-tag integration-background-color integration-border-color">
       <span class="acronym integration-text-bold-color">{{block.acronym}}</span>
       <span class="integration-text-color">Risk Score: {{result.domain_risk.risk_score}}</span>
    </span>
{{/unless}}
{{#each result.domain_risk.components as | risk |}}
    <span {{on "click" (optional this.scrollToIntegration)}} class="integration-summary-tag integration-background-color integration-border-color">
       <span class="acronym integration-text-bold-color">{{block.acronym}}</span>
       <span class="integration-text-color">{{humanize risk.name}}</span>
    </span>
{{/each}}
